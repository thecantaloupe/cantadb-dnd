<style>
.navBar{
  background-color: rgb(218, 218, 218); 

}
/*Floats each item to the left with padding of 14 & 16 px.
Removes the underline with text decoration = none.*/
.navBar h2{
    padding: 14px 16px;
    display: inline;
}
.navBar a{
  color: grey;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  font-family: Tahoma;
}
.navBar {
    padding-top: 10px;
    overflow: hidden;
    padding-bottom: 10px;
}
.navBar a:hover{
    background-color: rgb(218, 218, 218); 
    color: #009cde;
}
.navBar .icon{
    background-color: rgb(218, 218, 218); 
    display: none;
}

@media (max-width: 700px){
  .navBar a:not(:first-child){
    display: none;
  }
  .navBar a.icon{
    display: block; float: right;
  }
  .navBar.responsive {
    position: relative;
  }
  .navBar.responsive a.icon {
    position: absolute;
    right: 0;
    top: 0;
  }
  .navBar.responsive a {
    float: none;
    display: block;
    text-align: left;
  }
}
</style>
<header>
    <div class="navBar" id="mainNavBar">
        <a href="<%=path%>./characters"><h2>DnDB</h2></a>
        <a href="<%=path%>./characters">Home</a>
        <a href="<%=path%>./about">About Us</a>
        <a href="<%=path%>./contact">Contact</a>
        <a href="<%=path%>./characters/new">New Character</a>
        <a href="<%=path%>./user/logout">Logout</a>
        <a href="javascript:void(0);" class="icon" onClick="expandmenu()">&#9776;</a>
</header>

<script>
const expandmenu = () => {
  let el = document.getElementById("mainNavBar");
  if (el.className === "navBar"){
    el.className += " responsive";
  } else {
    el.className = "navBar";
  }
}
</script>